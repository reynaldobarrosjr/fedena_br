<% if @archived_students.nil? or @archived_students.empty? %>
  <div id="no_result">Nenhum estudante encontrado</div>
<% else %>
  <% @archived_students.each_with_index do |r, i| %>
    <%= '<div class="students-on-one-line">' if i%4 == 0 %>
    <div id="ajax_result">
      <% link_value = r.first_name + " " + r.last_name %>
      <%= link_to link_value, :controller => "archived_student", :action => "profile", :id => r.id %><br/>
      <small>Curso e Turma: <%= "#{r.batch.full_name}" %></small>
      <small><br/>Nº Matrícula<%= r.admission_no %></small> <%= @st.to_s %>
    </div>
    <%= '</div>' if i%4 == 3 %>
  <% end %>

<% end %>
